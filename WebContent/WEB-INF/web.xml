<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
<!-- <web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0"> -->
  <display-name>Hipster</display-name>
  <welcome-file-list>
    <welcome-file>mainPage.html</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>hipster.DBCreate</listener-class>
  </listener>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>filters.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <display-name>Discover</display-name>
    <servlet-name>Discover</servlet-name>
    <servlet-class>hipster.Servlet.Discover</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Discover</servlet-name>
    <url-pattern>/Discover</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Follow</display-name>
    <servlet-name>Follow</servlet-name>
    <servlet-class>hipster.Servlet.Follow</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Follow</servlet-name>
    <url-pattern>/Follow</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Followers</display-name>
    <servlet-name>Followers</servlet-name>
    <servlet-class>hipster.Servlet.Followers</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Followers</servlet-name>
    <url-pattern>/followers</url-pattern>
    <url-pattern>/followers/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Following</display-name>
    <servlet-name>Following</servlet-name>
    <servlet-class>hipster.Servlet.Following</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Following</servlet-name>
    <url-pattern>/following</url-pattern>
    <url-pattern>/following/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>hipster.Servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Logout</display-name>
    <servlet-name>Logout</servlet-name>
    <servlet-class>hipster.Servlet.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Post</display-name>
    <servlet-name>Post</servlet-name>
    <servlet-class>hipster.Servlet.Post</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Post</servlet-name>
    <url-pattern>/Post</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Replies</display-name>
    <servlet-name>Replies</servlet-name>
    <servlet-class>hipster.Servlet.Replies</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Replies</servlet-name>
    <url-pattern>/Replies</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>SignUp</display-name>
    <servlet-name>SignUp</servlet-name>
    <servlet-class>hipster.Servlet.SignUp</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/SignupServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>Topic</display-name>
    <servlet-name>Topic</servlet-name>
    <servlet-class>hipster.Servlet.Topic</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Topic</servlet-name>
    <url-pattern>/topic</url-pattern>
    <url-pattern>/topic/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>UserPage</display-name>
    <servlet-name>UserPage</servlet-name>
    <servlet-class>hipster.Servlet.UserPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserPage</servlet-name>
    <url-pattern>/user</url-pattern>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>hipster_DB</description>
    <res-ref-name>jdbc/hipster_DB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>